  "links": {
    "description": "Hypermedia Links for an academic course resource",
    "type": "object",
    "properties": {
      "course": {
        "description": "Hypermedia link to retrieve this academic course resource",
        "type": "object",
        "required": [
          "rel",
          "href",
          "method"
        ],
        "properties": {
          "rel": {
            "type": "string",
            "enum": [
              "self"
            ],
            "default": "self"
          },
          "href": {
            "type": "string",
            "format": "uri",
            "default": "https://api.byu.edu/curriculum/v1.0/course/:curriculumId,:titleCode"
          },
          "method": {
            "type": "string",
            "enum": [
              "GET"
            ],
            "default": "GET"
          }
        }
      }
    }
  },
  "metadata": {
    "allOf": [
      {
        "type": "object",
        "properties": {
          "field_sets_returned": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "basic",
                "summary"
              ]
            }
          },
          "field_sets_available": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "basic",
                "summary"
              ]
            }
          },
          "field_sets_default": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "basic"
              ]
            }
          },
          "contexts_available": {
            "description": "Contexts available for the academic program requirement resource",
            "type": "object",
            "properties": {
              "all": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "basic",
                    "summary"
                  ]
                }
              }
            }
          },
          "collection_size": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      {
        "$ref": "https://raw.githubusercontent.com/byu-oit/byu_swagger_reference/master/swagger/core/index.json#/simple_metadata"
      }
    ]
  },
